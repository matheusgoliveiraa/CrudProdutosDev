@model ProdutosModel
@{
    ViewData["title"] = "Cadastrar Produtos";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Produtos</h1>
    </div>

    <form method="post" asp-controller="Produtos" asp-action="Cadastrar">
        <div class="mb-3">
            <label for="Nome" class="form-label text-light">Nome:</label>
            <input type="text" class="form-control text-light" asp-for="Nome" id="Nome" placeholder="Digite o nome do produto.">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="mb-3">
            <label for="Descricao" class="form-label text-light">Descrição:</label>
            <input type="text" class="form-control text-light" asp-for="Descricao" id="Descricao" placeholder="Descreva o produto...">
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>

        <div class="mb-3">
            <label for="Preco" class="form-label text-light">Preço:</label>
            <input type="number" min="0" class="form-control text-light" asp-for="Preco" id="Preco" placeholder="Digite o preço do produto.">
            <span class="text-danger" asp-validation-for="Preco"></span>
        </div>

        <div class="mb-3">
            <label for="Categoria" class="form-label text-light">Categoria:</label>
            <input type="text" class="form-control text-light" asp-for="Categoria" id="Categoria" placeholder="Digite a categoria do produto.">
            <span class="text-danger" asp-validation-for="Categoria"></span>
        </div>
        
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Produtos" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>
